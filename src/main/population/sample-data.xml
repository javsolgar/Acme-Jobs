<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<import resource="conversion-service.xml" />
	
	
	
	<!-- Announcements -->
	<bean id="announcement01" class="acme.entities.announcements.Announcement">
		<property name="title" value="Sample announcement 01"/>
		<property name="moment" value="2019/06/10 10:35"/>
		<property name="moreInfo"><null/></property>
		<property name="text" value="This is the description of a sample announcement"/>
	</bean>

	<bean id="announcement02" class="acme.entities.announcements.Announcement">
		<property name="title" value="Sample announcement 02"/>
		<property name="moment" value="2019/06/10 00:00"/>
		<property name="moreInfo" value="http://www.example.com"/>
		<property name="text" value="This is the description of another announcement"/>
	</bean>
	<bean id="announcement03" class="acme.entities.announcements.Announcement">
		<property name="title" value="Sample announcement 03"/>
		<property name="moment" value="1910/10/10 19:10"/>
		<property name="moreInfo" value="http://www.example.com"/>
		<property name="text" value="This is a very old announcement"/>
	</bean>
	
	
	<!-- Requests -->
	<bean id="request01" class="acme.entities.request.Request">
		<property name="title" value="Sample request 01"/>
		<property name="moment" value="2019/05/10 10:35"/>
		<property name="deadLine" value="2019/07/10 12:35"/>
		<property name="description" value="This is the description of a sample request"/>
		<property name="reward" value="200€"/>
		<property name="idRequest" value="RABCD-00001"/>
	</bean>

	<bean id="request02" class="acme.entities.request.Request">
		<property name="title" value="Sample request 01"/>
		<property name="moment" value="2018/05/10 10:35"/>
		<property name="deadLine" value="2018/07/10 12:35"/>
		<property name="description" value="This is the description of a the second request"/>
		<property name="reward" value="2000€"/>
		<property name="idRequest" value="RABCD-00002"/>
	</bean>
	
	<bean id="request03" class="acme.entities.request.Request">
		<property name="title" value="Sample request 01"/>
		<property name="moment" value="2017/05/10 10:35"/>
		<property name="deadLine" value="2017/07/10 12:35"/>
		<property name="description" value="This is the description of the third request"/>
		<property name="reward" value="1200€"/>
		<property name="idRequest" value="RABCD-00003"/>
	</bean>
	
</beans>
